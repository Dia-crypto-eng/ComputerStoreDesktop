<UserControl x:Class="ComputerStore.Views.Home.Dashboard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ComputerStore.Views.Home"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <TabControl>
            <TabItem Header="Invoices">
                <Grid Background="LightBlue">
                    <TextBlock Text="مرحبا في الصفحة الأولى" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Grid>
            </TabItem>
            <TabItem Header="Inventory">
                <Grid Background="LightBlue">
                    <TextBlock Text="مرحبا في الصفحة الأولى" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Grid>
            </TabItem>

            <TabItem Header="Client">
                <Grid Background="LightBlue">
                    <TextBlock Text="مرحبا في الصفحة الأولى" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Grid>
            </TabItem>


            <TabItem Header="الصفحة الثانية">
                <StackPanel>
                    <TextBlock Text="الصفحة الثانية" />
                    <Button Content="زر تجريبي" />
                </StackPanel>
            </TabItem>
        </TabControl>

    </Grid>
</UserControl>
