<UserControl x:Class="ComputerStore.Views.addFacture"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ComputerStore.Views"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:ie="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
             xmlns:controls="clr-namespace:ComputerStore.Views"
             mc:Ignorable="d" 
             >
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisConverter"/>
    </UserControl.Resources>
    <Grid>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"></ColumnDefinition>
                <ColumnDefinition Width="4*"></ColumnDefinition>
            </Grid.ColumnDefinitions>


            <StackPanel Grid.Column="0"  Orientation="Vertical">

                <Border Grid.Column="0" Background="White" CornerRadius="10" Margin="10 0 10 10" BorderThickness="0.5"  >
                    <Border.Effect>
                        <DropShadowEffect 
                            Color="Black" 
                            Direction="315" 
                            ShadowDepth="5" 
                            Opacity="0.5" 
                            BlurRadius="10" />
                    </Border.Effect>
                    <Grid Background="Transparent"  VerticalAlignment="Top" Height="55">
                        <Label Content="Provider" Background="Transparent" Foreground="Black" FontSize="16" FontWeight="Bold"
                                    Margin="10 0" Width="75" Height="31" HorizontalAlignment="Left" >
                        </Label>

                        <ComboBox x:Name="listClient" ItemsSource="{Binding Provider.ListClient}" Background="Transparent"
                                        VerticalAlignment="Center"  Height="30" Margin="94,0,48,0" Foreground="#A0A0A0"
                                        SelectedIndex="0" SelectedItem="{Binding Provider.SelectClient}"  >
                                <ComboBox.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock FontWeight="Bold" FontSize="16">
                                            <TextBlock.Text>
                                                <MultiBinding StringFormat="{}{0} -- {1} {2}">
                                                    <Binding Path="CompanyName" />
                                                    <Binding Path="FirstName" />
                                                    <Binding Path="LastName" />
                                                </MultiBinding>
                                            </TextBlock.Text>
                                        </TextBlock>
                                    </DataTemplate>
                                </ComboBox.ItemTemplate>
                                <ie:Interaction.Triggers>
                                    <ie:EventTrigger EventName="SelectionChanged">
                                    <ie:InvokeCommandAction Command="{Binding AddProviderName}" />
                                </ie:EventTrigger>
                                </ie:Interaction.Triggers>
                        </ComboBox>
                        
                        <Button  Background="Transparent" Foreground="Black" FontSize="11" BorderBrush="{x:Null}"
                                 HorizontalAlignment="Right"  Width="35" Margin="246,11,7,10" Padding="0"
                                Height="Auto" Click="AddProviderModal">
                            <materialDesign:PackIcon Kind="Plus" Width="20" Height="20"></materialDesign:PackIcon>
                        </Button>
                    </Grid>
                </Border>
                <Border Grid.Column="0" Background="White" CornerRadius="10" Margin="10 18 10 08" BorderThickness="0.5"  >
                    <Border.Effect>
                        <DropShadowEffect 
                                         Color="Black" 
                                         Direction="315" 
                                         ShadowDepth="5" 
                                         Opacity="0.5" 
                                         BlurRadius="10" />
                    </Border.Effect>
                    <StackPanel Orientation="Vertical">
                        <Label Content="Add Item" Background="Transparent" Foreground="Black" FontSize="16" FontWeight="Bold"
                                 Margin="10 10 0 0">
                        </Label>
                        <Border BorderBrush="#F6F7F8" BorderThickness="3" Margin="5" Padding="5">
                            <Grid >
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="1*"></RowDefinition>
                                    <RowDefinition Height="1*"></RowDefinition>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="1*"></ColumnDefinition>
                                    <ColumnDefinition Width="1*"></ColumnDefinition>
                                    <ColumnDefinition Width="1*"></ColumnDefinition>
                                    <ColumnDefinition Width="1*"></ColumnDefinition>
                                </Grid.ColumnDefinitions>
                                <Label Grid.Row="0" Grid.Column="0" Content="Name Product"></Label>
                                <Label Grid.Row="0" Grid.Column="1" Content="Price"></Label>
                                <Label Grid.Row="0" Grid.Column="2" Content="Quantity"></Label>
                                <Label Grid.Row="0" Grid.Column="3" Content=""></Label>
                                <Label Grid.Row="1" Grid.Column="0" Content="{Binding Product.SelectProduct.Name}"></Label>
                                <TextBox Grid.Row="1" Grid.Column="1" Background="#F6F7F8" Margin="2 0"  Text="{Binding SelectBuyInvoiceItemModel.Price_buy}"></TextBox>
                                <TextBox Grid.Row="1" Grid.Column="2" Background="#F6F7F8" Margin="2 0" Text="{Binding SelectBuyInvoiceItemModel.Quantity}"></TextBox>
                                <Button Grid.Row="1" Grid.Column="3" Content="yes" Background="Black" Margin="2 2" Command="{Binding AddItem}"></Button>

                            </Grid>
                        </Border>
                    </StackPanel>
                </Border>
                <Grid Margin="10 20 10 0" >
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"></ColumnDefinition>
                        <ColumnDefinition Width="2*"></ColumnDefinition>
                    </Grid.ColumnDefinitions>

                    <Border Grid.Column="0" Background="White" CornerRadius="10" Margin="0 0 5 0"
                                        >
                        <Border.Effect>
                            <DropShadowEffect 
                                             Color="Black" 
                                             Direction="315" 
                                             ShadowDepth="5" 
                                             Opacity="0.5" 
                                             BlurRadius="10"/>
                        </Border.Effect>
                        <StackPanel Orientation="Vertical">
                            <StackPanel Orientation="Horizontal">
                                <Label Content="Family" Background="Transparent" Foreground="Black" FontSize="16" FontWeight="Bold"
                                                         Margin="30 10 0 0">
                                </Label>
                                <Button x:Name="addFamily" Background="Transparent"   Foreground="Black" Click="AddFamilyModal" 
                                                            HorizontalAlignment="Left"  VerticalAlignment="Top" Width="35" Padding="0" Margin="0 10"
                                                            BorderBrush="{x:Null}">
                                    <materialDesign:PackIcon Kind="Plus" Width="20" Height="20"></materialDesign:PackIcon>
                                </Button>
                            </StackPanel>

                            <ListView Name="ListFamily"  ItemsSource="{Binding Product.ListFamily}"
                                                              SelectedItem="{Binding Product.SelectFamily}"  Height="286" Margin="10"
                                                              HorizontalAlignment="Stretch">


                                <ListView.ItemTemplate  >
                                    <DataTemplate >
                                        <Border BorderBrush="#F6F7F8">
                                            <TextBlock   Foreground="Black" Text="{Binding Name}" ></TextBlock>
                                        </Border>
                                    </DataTemplate>
                                </ListView.ItemTemplate>

                                <ie:Interaction.Triggers>
                                    <ie:EventTrigger EventName="SelectionChanged">
                                        <ie:InvokeCommandAction Command="{Binding Product.chooseFamily}" />
                                    </ie:EventTrigger>
                                </ie:Interaction.Triggers>

                            </ListView>
                        </StackPanel>
                    </Border>
                    <Border Grid.Column="1" Background="White" CornerRadius="10" Margin="5 0 0 0" >
                        <Border.Effect>
                            <DropShadowEffect 
                                      Color="Black" 
                                      Direction="315" 
                                      ShadowDepth="5" 
                                      Opacity="0.5" 
                                      BlurRadius="10"/>
                        </Border.Effect>
                        <Border BorderBrush="#F6F7F8" Margin="10" BorderThickness="2">
                            <StackPanel Grid.Column="1" Orientation="Vertical" >

                                <Grid Background="Black">
                                    <Label Content="Product" Foreground="White" Margin="5 0" FontWeight="DemiBold"
                                                           FontSize="14">
                                    </Label>
                                    <Button x:Name="add_product" Background="Transparent"  Foreground="#F6F7F8" Click="AddProductModal" 
                                            Visibility="{Binding Product.IsFamilySelected, Converter={StaticResource BoolToVisConverter}}" 
                                            HorizontalAlignment="Right"  VerticalAlignment="Top" Width="35" Padding="0" 
                                            BorderBrush="{x:Null}">
                                        <materialDesign:PackIcon Kind="Plus" Width="20" Height="20"></materialDesign:PackIcon>
                                    </Button>
                                </Grid>
                                <ListView x:Name="test" Height="155" ItemsSource="{Binding Product.ListProduct}"
                                                          SelectedItem="{Binding Product.SelectProduct}" >
                                  
                                    <ListView.ItemTemplate >
                                        <DataTemplate  >
                                            <Label   Content="{Binding Name}"   Foreground="Black" HorizontalAlignment="Left">
                                            </Label>
                                        </DataTemplate>
                                    </ListView.ItemTemplate>

                                </ListView>

                            </StackPanel>
                        </Border>
                    </Border>
                </Grid>

            </StackPanel>
            <Border Background="White" Grid.Column="1"  CornerRadius="20" Margin="0 0 30 0" Padding="15">
                <Border.Effect>
                    <DropShadowEffect 
                         Color="Black" 
                         Direction="315" 
                         ShadowDepth="5" 
                         Opacity="0.5" 
                         BlurRadius="10"/>
                </Border.Effect>
                <Border  x:Name="factureShow" Background="#F6F7F8" 
                         >
                </Border>
            </Border>

        </Grid>
        <!--#80000000-->
        <!-- طبقة شفافة للتعتيم تغطي كامل الحجم -->
        <Grid x:Name="OverlayGrid" Background="#F6F7F8" Opacity="0.8" Visibility="Collapsed"
          HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
          Width="Auto" Height="Auto"/>

        <Grid x:Name="ModalGrid" Visibility="Collapsed"  HorizontalAlignment="Center"  VerticalAlignment="Center">
    
        </Grid>

    </Grid>
</UserControl>
